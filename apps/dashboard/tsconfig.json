{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@brainbox/database": ["../../packages/database"],
      "@brainbox/validation": ["../../packages/validation"],
      "@brainbox/shared": ["../../packages/shared"],
      "@brainbox/shared/*": ["../../packages/shared/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
