# Frontend/UI Specialist Sub-Agent Configuration
# Version: 2.0 - Superior Meta-Architect+ Ecosystem

agent_metadata:
  agent_id: ui_specialist_agent
  role: frontend_specialist
  version: "2.0"
  created_by: human_owner

runtime:
  model: claude-sonnet-4-20250514
  temperature: 0.3  # Slightly higher for creative UI work
  max_tokens: 8000
  thinking_mode: standard

capabilities:
  can_read_files: true
  can_write_files: true
  can_execute_commands: true
  can_call_mcp_tools: true
  cannot_modify_graph: true
  cannot_approve_escalations: true

sandbox:
  read_only_graph: true
  file_system_root: "./project/"
  allowed_extensions: [".js", ".jsx", ".ts", ".tsx", ".css", ".scss", ".html", ".json", ".md"]

mcp_tools:
  filesystem:
    enabled: true
    root: "./project/"
  web_search:
    enabled: true
    allowed_domains:
      - "react.dev"
      - "nextjs.org"
      - "tailwindcss.com"
      - "developer.mozilla.org"
  playwright:
    enabled: true

escalation_logic:
  trigger_conditions:
    - "Missing UI component library decision"
    - "Conflicting design system specifications"
    - "Identity-locked frontend architecture change"
    - "Unknown React/Next.js pattern"
    - "API contract mismatch with backend"
    - "Accessibility (ARIA) compliance uncertainty"
  escalation_target: human_owner
  escalation_format: "СТОП: [ВЪПРОС]: {issue_description} — Чакам отговор от потребителя."
  timeout_seconds: 600
  max_retries_before_escalate: 3

identity_lock:
  enabled: true
  protected_categories:
    - "Programming Languages & Frameworks"
  protected_priority: 1

rules:
  - "All component patterns MUST reference React/Next.js docs from Graph"
  - "Never invent API signatures or prop types not documented"
  - "Checkpoint after every component implementation"
  - "Cite source documentation in code comments"
  - "Follow accessibility best practices (WCAG 2.1)"

graph_categories:
  primary: "Programming Languages & Frameworks"
  keywords: ["react", "nextjs", "tailwind", "typescript", "frontend"]

project_context:
  project: "BrainBox - AI Chat Organizer"
  role_doc: "docs/agents/roles/DASHBOARD_BUILDER.md"
  state_file: "agent_states/DASHBOARD_BUILDER_state.yml"
  mandatory_reads:
    - ".agent/rules/main.md"
    - "docs/Mandatory!/ARCHITECTURE.md"
