{
  "manifest_version": 3,
  "name": "BrainBox AI Chat Organizer",
  "version": "2.2.0",
  
  "permissions": [
    "storage",
    "webRequest",
    "cookies",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://www.perplexity.ai/*",
    "https://x.com/*",
    "https://chat.qwenlm.ai/*",
    "https://chat.lmsys.org/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "src/lib/ui.js",
        "src/content/content-chatgpt.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "src/lib/ui.js",
        "src/content/content-claude.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "src/lib/ui.js",
        "src/content/brainbox_master.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": [
        "src/lib/ui.js",
        "src/content/content-deepseek.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": [
        "src/lib/ui.js",
        "src/content/content-perplexity.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://x.com/i/grok*"],
      "js": [
        "src/lib/ui.js",
        "src/content/content-grok.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.qwenlm.ai/*"],
      "js": [
        "src/lib/ui.js",
        "src/content/content-qwen.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.lmsys.org/*"],
      "js": [
        "src/lib/ui.js",
        "src/content/content-lmarena.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/inject-gemini-main.js",
        "src/lib/ui.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
