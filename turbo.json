{
  "$schema": "https://turborepo.dev/schema.json",
  "globalDependencies": [
    "**/.env",
    "tsconfig.json"
  ],
  "globalEnv": [
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "NODE_ENV"
  ],
  "globalPassThroughEnv": [
    "VERCEL_URL",
    "VERCEL_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "verify": {
      "dependsOn": ["type-check", "lint", "test"],
      "outputs": [],
      "cache": false
    }
  }
}
