{
  "manifest_version": 3,
  "name": "BrainBox - AI Chat Organizer",
  "version": "3.0.0",
  "description": "Organize AI conversations from ChatGPT, Gemini, and Claude into your personal dashboard",
  "permissions": [
    "storage",
    "webRequest",
    "cookies",
    "contextMenus",
    "notifications",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://x.com/*",
    "https://grok.com/*",
    "https://www.perplexity.ai/*",
    "https://chat.qwenlm.ai/*",
    "https://chat.lmsys.org/*"
  ],
  "background": {
    "service_worker": "background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "lib/config-global.js",
        "lib/ui.js",
        "content/content-chatgpt.js",
        "prompt-inject/prompt-inject.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "lib/config-global.js",
        "lib/ui.js",
        "content/content-claude.js",
        "prompt-inject/prompt-inject.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "lib/ui.js",
        "content/brainbox_master.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": [
        "lib/ui.js",
        "content/content-deepseek.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": [
        "lib/ui.js",
        "content/content-perplexity.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://x.com/i/grok*",
        "https://grok.com/*"
      ],
      "js": [
        "lib/ui.js",
        "content/content-grok.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.qwenlm.ai/*"],
      "js": [
        "lib/ui.js",
        "content/content-qwen.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.lmsys.org/*"],
      "js": [
        "lib/ui.js",
        "content/content-lmarena.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/config-global.js",
        "prompt-inject/prompt-inject.js"
      ],
      "run_at": "document_idle",
      "exclude_matches": [
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://x.com/*",
        "https://grok.com/*",
        "https://www.perplexity.ai/*",
        "https://chat.qwenlm.ai/*",
        "https://chat.lmsys.org/*"
      ]
    },
    {
      "matches": [
        "http://localhost:3000/extension-auth",
        "http://127.0.0.1:3000/extension-auth"
      ],
      "js": [
        "content/content-dashboard-auth.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "content/inject-gemini-main.js"
      ],
      "matches": [
        "https://gemini.google.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://localhost:5173 http://localhost:5173 http://localhost:3000 http://127.0.0.1:3000 https://chatgpt.com https://chat.openai.com https://claude.ai https://gemini.google.com https://chat.deepseek.com https://x.com https://www.perplexity.ai https://chat.qwenlm.ai https://chat.lmsys.org"
  }
}