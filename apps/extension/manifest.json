{
  "manifest_version": 3,
  "name": "BrainBox",
  "description": "AI Chat Organizer",
  "version": "3.0.1",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://*.deepseek.com/*",
    "https://*.perplexity.ai/*",
    "https://x.com/i/grok/*",
    "https://*.qwenlm.ai/*",
    "__DASHBOARD_URL__/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*", "https://brainbox-alpha.vercel.app/*"],
      "js": ["src/content/content-dashboard-auth.ts"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.perplexity.ai/*",
        "https://*.perplexity.ai/*",
        "https://x.com/i/grok*",
        "https://grok.com/*",
        "https://chat.qwen.ai/*",
        "https://chat.lmsys.org/*",
        "https://arena.ai/*",
        "https://lmarena.ai/*"
      ],
      "js": ["src/prompt-inject/prompt-inject.ts"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["*://localhost/*", "https://gemini.google.com/*", "https://chatgpt.com/*", "https://claude.ai/*"]
    }
  ]
}
